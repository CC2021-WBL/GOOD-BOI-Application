{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^(.*)$",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/client/index.html"
    }
  ]
}
