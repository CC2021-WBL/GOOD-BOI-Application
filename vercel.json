{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api(.*)", "dest": "index.js" },
    {
      "src": "^(.*)$",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "client/index.html"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "client/static/$1"
    }
  ]
}
